extends ../layouts/common.pug
block content
    h1 Login
    if errors
        each error in errors
            .alert.alert-danger= error
    form(method="POST", action="/auth/login")
        .form-group
            label(for="email") Email
            input#email.form-control.mr-sm-2.mb-2(name="email", type="text", value= values ? values.email : "")

            label(for="password") Password
            input#password.form-control.mr-sm-2.mb-2(name="password", type="password", value= values ? values.password : "")
        button.btn.btn-primary(type="submit") Login