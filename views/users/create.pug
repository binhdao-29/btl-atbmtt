extends ../layouts/common.pug
block content
    h1 Thêm tài khoản 
    if errors
        each error in errors
            .alert.alert-danger= error
    form(action="/users/create", method="POST")
        .form-group
            label(for="Name") Tên
            input#Name.form-control.mr-sm-2.mb-2(name="name", aria-label='Create', type="text", value= values ? values.name : "")
        .form-group
            label(for="phone") Số tài khoản
            input#phone.form-control.mr-sm-2.mb-2(name="phone", aria-label='Create', type="text", value= values ? values.phone : "")
        button.btn.btn-primary(type="submit") Thêm